*{
	margin: 0px ;
	padding: 0px ;
}

html{
	height: 100%;
}
#wrapper{
	color: white;
	text-align: center;
	margin:	0px auto;
	padding: 0px auto;
	width: 1024px;
}

.form-control{
	width: 60%;
	display: inline;
	margin: 0px auto;
}

#search_formContainer{
	margin-top: 150px;
}
#topTitle_link:hover, #topTitle_link:visited, #topTitle_link:link, #topTitle_link:active{
	color:inherit;
	text-decoration: none;
}

#topTitle{
	margin-top: 10px;
	margin-left: 10px;
	font-size: 25px;
	float: left;
	font-family: 'Open Sans', sans-serif;
	color: white;
}
#mainTitle{
	font-size: 35px;
	font-family: 'Open Sans', sans-serif;
	color: white;
}
#result_formContainer{
	width:70%;
	margin-top: 10px;
	float: left;
	padding-left: 15px;
}
#topSearch{
	z-index:1;
	position: fixed;
	top: 0px;
	left: 0px;
	width: 100%;
	display: block;
	background-color:#FAA458;
	clear: both;
    overflow: hidden;

}
#resultsContainer{
	display:block;
	position: absolute;
	margin-top: 110px;
	height: 100%;
	width: 100%;
	background-color: white;
}
.container{
	margin-top:20px;
}

#numberOfResults{
	font-size: 12px;
	color: gray;
}
#resultDetailsContainer{
	clear: both;
    overflow: hidden;

}
#author{
	float:left;
	font-size: 12px;
	color: gray;
}
#date{
	float:left;
	font-size: 12px;
	color: gray;
}
#title{
	font-size: 16px;
}
#loginWrapper{
	background-color: #FAAD68;
	width:600px;
	margin: 0 auto;
	margin-top: 200px;
	border: white 1px solid;
	color:white;
}

#loginWrapper fieldset{
	padding-bottom: 20px;
	margin: 0 auto;
	text-align: center;
	color: black;
}
#loginWrapper h1{
	color:white;
	margin: 0 auto;
	text-align: center;
	padding-bottom: 15px;
}


a.resultTitleLink:link {color: #4B5B6F;}
a.resultTitleLink:visited {color: #4B5B6F;}
a.resultTitleLink:hover {color: #4B5B6F;}
a.resultTitleLink:focus {color: #4B5B6F;}
a.resultTitleLink:active {color: #4B5B6F;}

a.filepathlink:link {color: #4B5B6F;}
a.filepathlink:visited {color: #4B5B6F;}
a.filepathlink:hover {color: #4B5B6F;}
a.filepathlink:focus {color: #4B5B6F;}
a.filepathlink:active {color: #4B5B6F;}
